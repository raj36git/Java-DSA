package patterns;
/*
 *
 **
 ***
 ****
 *****
 */
public class Patter2 {
    public static void main(String[] args) {
        pattern2(5);
    }
    static void pattern2(int n){
        //for outer loop , no of row = n
        for (int i = 1; i <= n; i++) {
            for (int j = 1; j <= i; j++) {
                System.out.print("*");
            }
            System.out.println();
        }
    }
}
